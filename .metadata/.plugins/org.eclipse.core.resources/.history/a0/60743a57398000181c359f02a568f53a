package serviceImpl;
import domain.*;
import service.BuyService;

public class BuyServiceImpl implements BuyService {
	BuyerBean buyer = new BuyerBean();
	BuyService service  = new BuyServiceImpl();

	@Override
	public int buyTv(TvBean tv) {
	int tvb = buyer.getMoney()-tv.getPrice();
	return tvb;
	}
	@Override
	public int buyAudio(AudioBean audio) {
		int audiob = buyer.getMoney()-audio.getPrice();
		return audiob;
	}
	@Override
	public int buyComputer(ComputerBean com) {
		int comb = buyer.getMoney()-com.getPrice();
		return comb;
	}
	@Override
	public int resultBuy() {
		int result = service.buyTv(null) + service.buyComputer(null) + service.buyAudio(null);
		return result;
	}

}
